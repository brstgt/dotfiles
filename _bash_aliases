# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# some more ls aliases
alias l='ls $LS_OPTIONS -lAhF'
alias ll='ls $LS_OPTIONS -lhF'
#alias ls='ls $LS_OPTIONS -hF'

alias df='df -h'
alias ..='cd ..'

alias rmtailingws="sed \"s/^\s*//;s/\s*$//\" -i "

alias dev1="ssh dev1.rz.kwick.de"
alias dev2="ssh dev2.jaumo.com"
alias jdeploy="cd ~/repos/jaumo.web && sh tool/bin/deploy-head.sh"
alias jdeployinstant="cd ~/repos/jaumo.web && php tool/bin/deploy-instant.php"
